@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<SanPham>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutShoes.cshtml";
}
@await Html.PartialAsync("~/Views/Shared/_PartialHero.cshtml")
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li class="active" data-filter="*">Best Sellers</li>
                    <li data-filter=".new-arrivals">New Arrivals</li>
                    <li data-filter=".hot-sales">Hot Sales</li>
                </ul>
            </div>
        </div>
        <div class="row product__filter" id="MixItUpC3C79E">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                @await Html.PartialAsync("~/Views/Shared/_PartialSP.cshtml",item)
                </div>
            }

            @Html.PagedListPager(Model,page => Url.Action("Index", new {page=page}),new X.PagedList.Web.Common.PagedListRenderOptions(){
            LiElementClasses = new List<String> {"page-item"},
            PageClasses = new List<String> {"page-link"}
            })
        </div>
        
    </div>
   
</section>


@await Html.PartialAsync("~/Views/Shared/_PartialCatagory.cshtml")
@await Html.PartialAsync("~/Views/Shared/_PartialInstagram.cshtml")
@await Html.PartialAsync("~/Views/Shared/_PartialLatest.cshtml")